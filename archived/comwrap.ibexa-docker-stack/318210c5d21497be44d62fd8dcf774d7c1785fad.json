{
    "manifests": {
        "comwrap/ibexa-docker-stack": {
            "manifest": {
                "copy-from-package": {
                    "src/doc/": "/",
                    "src/bin/vhost.sh": "%BIN_DIR%/vhost.sh"
                },
                "env": {
                    "COMPOSER_HOME": "~/.composer",
                    "COMPOSE_FILE": "doc/docker/base-dev-mutagen.yml",
                    "COMPOSE_DIR": ".",
                    "COMPOSE_PROJECT_NAME": "yourProjectKey",
                    "PHP_INI_ENV_memory_limit": "-1",
                    "PHP_IMAGE": "ezsystems/php:8.1-v2-node14",
                    "NGINX_IMAGE": "nginx:stable",
                    "MYSQL_IMAGE": "healthcheck/mariadb",
                    "REDIS_IMAGE": "healthcheck/redis",
                    "DATABASE_USER": "ezp",
                    "DATABASE_PASSWORD": "SetYourOwnPassword",
                    "DATABASE_NAME": "ezp",
                    "DATABASE_HOST": "db",
                    "DATABASE_PORT": "3306",
                    "DATABASE_PLATFORM": "mysql",
                    "DATABASE_DRIVER": "pdo_mysql",
                    "DATABASE_VERSION": "mariadb-10.3.0",
                    "DATABASE_URL": "${DATABASE_PLATFORM}://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}?serverVersion=${DATABASE_VERSION}"
                },
                "post-install-output": [
                    "<bg=blue;fg=white>              </>",
                    "<bg=blue;fg=white> What's next? </>",
                    "<bg=blue;fg=white>              </>",
                    "",
                    "  * <fg=blue>Run</> your application:",
                    "    1. Create a .env from the .env.dist",
                    "    2. Set a project name & the docker-compose config you want to use in your local .env file",
                    "    3. Remove the solr service config from your docker-compose file when creating the project for the first time",
                    "    4. Run composer install",
                    "    5. Create the solr config as described here -> https://doc.ibexa.co/en/latest/search/solr_search_engine/#generating-configuration",
                    "    6. Re-add the solr service and build again."
                ]
            },
            "files": [],
            "ref": "318210c5d21497be44d62fd8dcf774d7c1785fad"
        }
    }
}
